apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-monitoring-1
  namespace: monitoring
spec:
  capacity:
    storage: 4Gi
  accessModes:
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  nfs:
    path: /data
    server: {{ ansible_hostname }}
    readOnly: false
    
